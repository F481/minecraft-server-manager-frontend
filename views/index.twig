<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}MSM-Frontend{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ app.request.basepath }}/css/bootstrap.min.css" />
        <link rel="stylesheet" href="{{ app.request.basepath }}/css/font-awesome.min.css" />
        <link rel="stylesheet" href="{{ app.request.basepath }}/css/main.css" />
        <link rel="stylesheet" href="{{ app.request.basepath }}/css/table-scroll.css" />
        <link href='http://fonts.googleapis.com/css?family=Ubuntu' rel='stylesheet' type='text/css'>
    {% endblock %}
    {% block javascripts %}
        <script src="{{ app.request.basepath }}/js/jquery-2.1.1.min.js"></script>
        <script src="{{ app.request.basepath }}/js/bootstrap.min.js"></script>
        <script src="{{ app.request.basepath }}/js/msm-frontend.js"></script>

        <script>
            $(document).ready(function() {
                msm = new MSM_Frontend();
                msm.init();
            });
        </script>
    {% endblock %}
</head>

<body>
{% block body %}
    <header>
        <nav class="navbar navbar-default" role="navigation">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#">MSM-Frontend</a>
                </div>

                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li class="active"><a href="#">Link</a></li>
                        <li><a href="#">Link</a></li>
                    </ul>
                </div><!-- navbar-collapse -->
            </div><!-- container-fluid -->
        </nav>
    </header>
    <main>
        <div id="overlay"></div>
        <div class="container-fluid">
            <div class="row">
                <section class="col-md-6 widget">
                    {% include 'overview.twig' ignore missing with {'servers': servers } %}
                </section>
                <section class="col-md-6 widget">
                    {% include 'console.twig' %}
                </section>
            </div>
            <div class="row">
                <section class="col-md-6 widget">
                    {% include 'settings.twig' %}
                </section>
                <section class="col-md-6 widget">
                    {% include 'options.twig' %}
                </section>
            </div>
        </div>
        <div class="alert alert-success" role="alert">
            <button type="button" class="close"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <p></p>
        </div>
        <div class="alert alert-danger" role="alert">
            <button type="button" class="close"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <p></p>
        </div>
        <div id="loader"><img src="{{ app.request.basepath }}/img/loader.gif" /></div>
    </main>
{% endblock %}
</body>
</html>